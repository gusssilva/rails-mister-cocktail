<div class="container">
  <div class="mt-3 p-4">
  <h1><%= @cocktail.name %></h1>
    <% @cocktail.doses.each do |dose| %>
    <ul class="list-unstyled">
      <li> <%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Remove this dose", dose_path(dose), method: :delete %></li>
    </ul>
    <% end %>
    <br>
    <%= link_to "Set your own dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary mb-2' %>
    <br>
    <%= link_to "Back to Main Page", root_path, class: 'btn btn-primary' %>
  </div>
</div>
